[user]
	name = kinoppyd
	email = ppyd@kinoppyd.dev
[core]
	excludesfile = $HOME/.gitignore_global
	editor = nvim
[color]
	ui = true
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[push]
	default = current
[merge]
	tool = vimdiff
[alias]
    s = status
    m = merge
    a = add
    co = checkout
    c = commit
    p = push
    b = branch
    n = now --all --stat
    f = fetch
[init]
	defaultBranch = main
